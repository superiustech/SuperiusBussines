        function showFlashMessage(options) {
            const settings = {
                message: '',
                details: '',
                type: 'error',
                duration: 3000,
                ...options
            };

            const colors = {
                error: { bg: '#ffebee', border: '#f44336' },
                success: { bg: '#e8f5e9', border: '#4caf50' },
                warning: { bg: '#fff8e1', border: '#ffc107' },
                info: { bg: '#e3f2fd', border: '#2196f3' }
            };

            const messageHtml = `
                <div class="flash-message" style="
                    padding: 10px;
                    background: ${colors[settings.type].bg};
                    border-left: 4px solid ${colors[settings.type].border};
                    margin-bottom: 10px;
                    ">
                    <strong>${settings.message}</strong>
                    ${settings.details ? `<div style="margin-top: 5px;">${settings.details}</div>` : ''}
                    <p style="margin: 5px 0 0 0; font-size: 0.8em; color: #666;">
                        Esta mensagem desaparecerá em ${settings.duration / 1000} segundos...
                    </p>
                </div>
            `;

            $('#divMessage').show();

            // Adiciona a mensagem e aplica os efeitos
            $('#divMessage')
                .append(messageHtml)
                .find('.flash-message:last')
                .fadeIn()
                .delay(settings.duration)
                .fadeOut(function () {
                    $(this).remove();
                    // Esconde a div container se não houver mais mensagens
                    if ($('#divMessage').children().length === 0) {
                        $('#divMessage').hide();
                    }
                });
        }

        function toggleSidebar() {
            const sidebar = document.querySelector('.sidebar');
            sidebar.classList.toggle('collapsed');
        }
    </script>
</body>
</html>