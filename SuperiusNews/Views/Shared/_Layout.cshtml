<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Superius</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="d-flex">
        <nav class="sidebar h" style="background: linear-gradient(135deg, #1a1c2e 0%, #16181f 100%)">
            <button class="toggle-btn m-12" style="margin-right: 40px;" onclick="toggleSidebar()">
                <i class="fas fa-chevron-left"></i>
            </button>

            <div class="p-4">
                <h4 class="logo-text text-light fw-bold mb-0">Superius</h4>
                <p class="text-light small hide-on-collapse">Administrador</p>
            </div>

            <div class="nav flex-column">
                <a asp-controller="Administrador" asp-action="" class="sidebar-link text-decoration-none text-light p-3">
                    <i class="fas fa-home me-3"></i>
                    <span class="hide-on-collapse">Dashboard</span>
                </a>
                <a href="#" class="sidebar-link text-decoration-none text-light p-3">
                    <i class="fas fa-chart-bar me-3"></i>
                    <span class="hide-on-collapse">Estoque</span>
                </a>
                <a asp-controller="Administrador" asp-action="Produto" class="sidebar-link text-decoration-none text-light p-3">
                    <i class="fas fa-box me-3"></i>
                    <span class="hide-on-collapse">Produtos</span>
                </a>
                <a asp-controller="Administrador" asp-action="ProdutoCadastrar" class="sidebar-link text-decoration-none text-light p-3">
                    <i class="fas fa-box me-3"></i>
                    <span class="hide-on-collapse">Cadastrar Produto</span>
                </a>
                <a href="#" class="sidebar-link text-decoration-none text-light p-3">
                    <i class="fas fa-gear me-3"></i>
                    <span class="hide-on-collapse">Configurações</span>
                </a>
            </div>

            <div class="profile-section mt-auto p-2">
                <div class="d-flex align-items-center">
                    <img src="https://i.postimg.cc/qqL8WQVS/foto-perfil.png" style="height:60px" class="rounded-circle" alt="Profile">
                    <div class="ms-3 profile-info">
                        <h6 class="text-white mb-0">Lucas Nogueira</h6>
                        <small class="text-light">Product Owner</small>
                    </div>
                </div>
            </div>
        </nav>

        <div class="main-content">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>

        $(document).ready(function () {
            $('.sidebar-link').click(function () {
                $('.sidebar-link').removeClass('active');
                $(this).addClass('active');
            });
        });

        function toggleSidebar() {
            const sidebar = document.querySelector('.sidebar');
            sidebar.classList.toggle('collapsed');
        }
    </script>
</body>
</html>