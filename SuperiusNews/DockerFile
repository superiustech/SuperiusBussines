# ===== 1. Build stage =====
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copia a solução e todos os projetos necessários para o restore
COPY ["SuperiusNews.sln", "./"]
COPY ["SuperiusNews/SuperiusNews.csproj", "SuperiusNews/"]
COPY ["Business/Business.csproj", "Business/"]
COPY ["Domain/Domain.csproj", "Domain/"]
COPY ["Infra/Infra.csproj", "Infra/"]

# Restaura dependências
RUN dotnet restore "SuperiusNews.sln"

# Copia todo o restante do código
COPY . .

# Publica o projeto
RUN dotnet publish "SuperiusNews/SuperiusNews.csproj" -c Release -o /app/publish /p:UseAppHost=false

# ===== 2. Runtime stage =====
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS final
WORKDIR /app

# Copia os arquivos publicados da build
COPY --from=build /app/publish .

# Variáveis de ambiente
ENV ASPNETCORE_URLS=http://+:8080
ENV ASPNETCORE_ENVIRONMENT=Production

# Expõe a porta
EXPOSE 8080

# Inicia a aplicação
ENTRYPOINT ["dotnet", "SuperiusNews.dll"]
